---
import { Separator } from "@/components/ui/separator";
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
---

<footer class="border-t border-border bg-muted/30">
  <div class="mx-auto max-w-7xl px-6 py-16">
    <div class="grid gap-12 md:grid-cols-4">
      <!-- Brand -->
      <div class="md:col-span-1">
        <a href={base} class="flex items-center gap-3">
          <img
            src={`${base}media/app-icon.png`}
            alt="SpotMenu"
            class="h-10 w-10"
          />
          <span class="text-xl font-semibold text-foreground">SpotMenu</span>
        </a>
        <p class="mt-4 text-sm text-muted-foreground">
          Spotify & Apple Music in your macOS menu bar. Beautiful, native, and
          distraction-free.
        </p>
      </div>

      <!-- Product -->
      <div>
        <h3 class="mb-4 text-sm font-semibold text-foreground">Product</h3>
        <ul class="space-y-3 text-sm">
          <li>
            <a
              href="#features"
              class="text-muted-foreground transition-colors hover:text-foreground"
            >
              Features
            </a>
          </li>
          <li>
            <a
              href="#preview"
              class="text-muted-foreground transition-colors hover:text-foreground"
            >
              Preview
            </a>
          </li>
          <li>
            <a
              href="https://github.com/kmikiy/SpotMenu/releases"
              target="_blank"
              class="text-muted-foreground transition-colors hover:text-foreground"
            >
              Releases
            </a>
          </li>
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="mb-4 text-sm font-semibold text-foreground">Resources</h3>
        <ul class="space-y-3 text-sm">
          <li>
            <a
              href="https://github.com/kmikiy/SpotMenu?tab=readme-ov-file#-installation"
              target="_blank"
              class="text-muted-foreground transition-colors hover:text-foreground"
            >
              Installation Guide
            </a>
          </li>
          <li>
            <a
              href="https://github.com/kmikiy/SpotMenu/issues"
              target="_blank"
              class="text-muted-foreground transition-colors hover:text-foreground"
            >
              Report an Issue
            </a>
          </li>
          <li>
            <a
              href="https://github.com/kmikiy/SpotMenu"
              target="_blank"
              class="text-muted-foreground transition-colors hover:text-foreground"
            >
              Source Code
            </a>
          </li>
        </ul>
      </div>

      <!-- Support -->
      <div>
        <h3 class="mb-4 text-sm font-semibold text-foreground">
          Support the Project
        </h3>
        <p class="mb-4 text-sm text-muted-foreground">
          SpotMenu is free and open source. If you enjoy it, consider supporting
          development.
        </p>
        <a
          href="https://paypal.me/kmikiy"
          target="_blank"
          class="inline-flex items-center gap-2 rounded-lg bg-gradient-to-r from-violet-600 to-blue-500 px-4 py-2 text-sm font-medium text-white transition-all hover:from-violet-700 hover:to-blue-600 hover:shadow-lg hover:shadow-violet-500/25"
        >
          <img
            src={`${base}media/paypal.svg`}
            alt="PayPal"
            class="h-4 w-4 brightness-0 invert"
          />
          Donate via PayPal
        </a>
      </div>
    </div>

    <Separator className="my-8" client:load />

    <div class="flex flex-col items-center justify-between gap-4 md:flex-row">
      <p class="text-sm text-muted-foreground">
        Built with love by{" "}
        <a
          href="https://github.com/kmikiy"
          target="_blank"
          class="text-foreground hover:underline"
        >
          @kmikiy
        </a>
      </p>
      <div class="flex items-center gap-4">
        <a
          href="https://github.com/kmikiy/SpotMenu"
          target="_blank"
          class="text-muted-foreground transition-colors hover:text-foreground"
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
